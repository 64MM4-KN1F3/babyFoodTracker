{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp"
      ],
      "disabled": false,
      "alwaysAllow": [
        "firebase_get_project",
        "firebase_get_environment",
        "firebase_get_sdk_config",
        "firestore_get_rules",
        "firebase_init"
      ]
    }
  }
}